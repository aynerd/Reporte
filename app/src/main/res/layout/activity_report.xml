<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLastReports"
    tools:context="com.sccreporte.reporte.LastReportsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentLeft="true"
            android:background="?android:selectableItemBackground"
            app:srcCompat="@drawable/ic_action_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/backButton"
            style="@style/lastReportLabelStyle"
            android:text="@string/report_label"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="32dp"/>

        <Button
            android:id="@+id/filterDayButton"
            android:text="@string/edit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <View
        android:background="@color/colorMoreBackground"
        android:layout_marginTop="8dp"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"/>
   </LinearLayout>
