            android:layout_weight="0.5"
            style="@style/reportDetailsStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/sanidades_label"
            style="@style/reporDetailsLabelStyle"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/visitas_label"
            style="@style/reporDetailsLabelStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sanidadesTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
