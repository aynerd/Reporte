<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainLabelStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@drawable/last_report_selector</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:drawableRight">@drawable/ic_action_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DivStyle">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:layout_marginStart">26dp</item>
    </style>

    <style name="buttonTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="moreStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="lastReportLabelStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
